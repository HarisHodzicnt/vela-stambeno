    <div class="container">
      <div class="header-content">
        <!-- Logo -->
        <router-link to="/" class="logo">
          <span class="logo-text">stambeno.ba</span>
        </router-link>

        <!-- Desktop Navigation -->
        <nav class="nav-desktop">
          <router-link to="/search" class="nav-link">Pretraži</router-link>
          
          <template v-if="authStore.isAuthenticated">
            <router-link v-if="authStore.isOwner" to="/properties/new" class="nav-link">
              Objavi
            </router-link>
            
            <div class="nav-dropdown">
              <button class="nav-link" @click="toggleUserMenu">
                <i class="pi pi-user"></i>
                <span>{{ authStore.user?.firstName }}</span>
                <i class="pi pi-chevron-down"></i>
              </button>
              
              <div v-if="showUserMenu" class="dropdown-menu">
                <router-link to="/dashboard" class="dropdown-item">
                  <i class="pi pi-home"></i>
                  Dashboard
                </router-link>
                <router-link to="/bookings" class="dropdown-item">
                  <i class="pi pi-calendar"></i>
                  Rezervacije
                </router-link>
                <router-link to="/offers" class="dropdown-item">
                  <i class="pi pi-money-bill"></i>
                  Ponude
                </router-link>
                <router-link to="/messages" class="dropdown-item">
                  <i class="pi pi-envelope"></i>
                  Poruke
                  <span v-if="unreadCount > 0" class="badge">{{ unreadCount }}</span>
                </router-link>
                <router-link to="/saved" class="dropdown-item">
                  <i class="pi pi-heart"></i>
                  Sačuvano
                </router-link>
                <router-link to="/profile" class="dropdown-item">
                  <i class="pi pi-cog"></i>
                  Postavke
                </router-link>
                <div class="dropdown-divider"></div>
                <button @click="handleLogout" class="dropdown-item">
                  <i class="pi pi-sign-out"></i>
                  Odjavi se
                </button>
              </div>
            </div>
          </template>
          
          <template v-else>
            <router-link to="/login" class="nav-link">Prijavi se</router-link>
            <router-link to="/register" class="btn-primary">Registruj se</router-link>
          </template>
        </nav>

        <!-- Mobile Menu Button -->
        <button class="mobile-menu-btn" @click="toggleMobileMenu">
          <i class="pi pi-bars"></i>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div v-if="showMobileMenu" class="mobile-menu">
      <router-link to="/search" class="mobile-menu-item" @click="closeMobileMenu">
        Pretraži
      </router-link>
      
      <template v-if="authStore.isAuthenticated">
        <router-link to="/dashboard" class="mobile-menu-item" @click="closeMobileMenu">
          Dashboard
        </router-link>
        <router-link to="/bookings" class="mobile-menu-item" @click="closeMobileMenu">
          Rezervacije
        </router-link>
        <router-link to="/messages" class="mobile-menu-item" @click="closeMobileMenu">
          Poruke
          <span v-if="unreadCount > 0" class="badge">{{ unreadCount }}</span>
        </router-link>
        <router-link to="/profile" class="mobile-menu-item" @click="closeMobileMenu">
          Profil
        </router-link>
        <button @click="handleLogout" class="mobile-menu-item">
          Odjavi se
        </button>
      </template>
      
      <template v-else>
        <router-link to="/login" class="mobile-menu-item" @click="closeMobileMenu">
          Prijavi se
        </router-link>
        <router-link to="/register" class="mobile-menu-item" @click="closeMobileMenu">
          Registruj se
        </router-link>
      </template>
    </div>
  </header>
</template>

<script setup lang="ts">
import { ref, onMounted, onUnmounted } from 'vue'
import { useRouter } from 'vue-router'
import { useAuthStore } from '@/stores/auth'

const router = useRouter()
const authStore = useAuthStore()

const showUserMenu = ref(false)
const showMobileMenu = ref(false)
const unreadCount = ref(0)

const toggleUserMenu = () => {
  showUserMenu.value = !showUserMenu.value
}

const toggleMobileMenu = () => {
  showMobileMenu.value = !showMobileMenu.value
}

const closeMobileMenu = () => {
  showMobileMenu.value = false
}

const handleLogout = async () => {
  await authStore.logout()
  showUserMenu.value = false
  showMobileMenu.value = false
  router.push('/')
}

// Close menus on outside click
const handleClickOutside = (event: MouseEvent) => {
  const target = event.target as HTMLElement
  if (!target.closest('.nav-dropdown')) {
    showUserMenu.value = false
  }
}

onMounted(() => {
  document.addEventListener('click', handleClickOutside)
})

onUnmounted(() => {
  document.removeEventListener('click', handleClickOutside)
})
</script>

