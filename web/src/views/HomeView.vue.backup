<script setup lang="ts">
import { ref, onMounted } from 'vue'
import { useRouter } from 'vue-router'
import PropertyCard from '@/components/properties/PropertyCard.vue'
import { api } from '@/api/client'
import type { Property } from '@/types'

const router = useRouter()

const searchType = ref<'rent' | 'sale' | 'both'>('rent')
const searchQuery = ref({
  city: '',
  checkIn: '',
  checkOut: ''
})

const featuredProperties = ref<Property[]>([])
const loading = ref(false)

const handleSearch = () => {
  const query: any = {
    listingType: searchType.value,
    city: searchQuery.value.city
  }
  
  if (searchType.value === 'rent' && searchQuery.value.checkIn && searchQuery.value.checkOut) {
    query.checkIn = searchQuery.value.checkIn
    query.checkOut = searchQuery.value.checkOut
  }
  
  router.push({
    name: 'Search',
    query
  })
}

const loadFeaturedProperties = async () => {
  loading.value = true
  try {
    const response = await api.get<{ data: Property[] }>('/properties', {
      params: {
        isFeatured: true,
        status: 'active',
        limit: 8
      }
    })
    featuredProperties.value = response.data
  } catch (error) {
    console.error('Failed to load featured properties:', error)
  } finally {
    loading.value = false
  }
}

onMounted(() => {
  loadFeaturedProperties()
})
</script>

